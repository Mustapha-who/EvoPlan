        <!-- Back Button -->
        <Button fx:id="retour" layoutX="14.0" layoutY="584.0" mnemonicParsing="false" onAction="#navigateBack" style="-fx-background-color: #e0e0e0; -fx-text-fill: #3f51b5; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 5 15;" text="Back" AnchorPane.leftAnchor="14" AnchorPane.bottomAnchor="14" />
    </children>
