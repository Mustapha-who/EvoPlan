                <TableColumn fx:id="idPartnershipColumn" prefWidth="96.00000143051147" text="ID Partnership" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="idPartnerColumn" prefWidth="103.99999237060547" text="ID Partner" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="idEventColumn" prefWidth="120.0" text="ID Event" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="startDateColumn" prefWidth="117.60003662109375" text="Start Date" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="endDateColumn" prefWidth="129.60000610351562" text="End Date" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="termsColumn" prefWidth="183.20001220703125" text="Terms" style="-fx-font-weight: bold;" />
                <TableColumn fx:id="actionsColumn" prefWidth="141.5999755859375" />
