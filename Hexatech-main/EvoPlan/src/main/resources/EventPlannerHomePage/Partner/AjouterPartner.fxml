<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1080.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.Partner.AjouterPartnerController">

   <children>

      <!-- Header Section -->
      <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" prefWidth="800.0" spacing="10">
         <Label style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Add Partner" textFill="#3f51b5">
            <effect>
               <DropShadow color="rgba(0, 0, 0, 0.2)" radius="10" />
            </effect>
         </Label>

      </VBox>

      <!-- Form Section -->
      <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" prefWidth="600.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-border-radius: 10; -fx-border-color: #e0e0e0; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 0);">
         <!-- Partner Type -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label prefHeight="27.0" prefWidth="157.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Partner Type:" textFill="#3f51b5" />
            <ComboBox fx:id="TypePartner" prefWidth="400.0" promptText="Select type" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>

         <!-- Email -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Email:" textFill="#3f51b5" />
            <TextField fx:id="Email" prefHeight="38.0" prefWidth="402.0" promptText="Enter email address" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>

         <!-- Phone Number -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Phone:" textFill="#3f51b5" />
            <TextField fx:id="PhoneNumber" prefWidth="400.0" promptText="Enter phone number" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>

         <!-- Logo Upload -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Logo:" textFill="#3f51b5" />
            <Button fx:id="image" onAction="#UPimage" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);" text="Upload Logo">
               <effect>
                  <DropShadow color="rgba(0,0,0,0.3)" radius="8" />
               </effect>
            </Button>
         </HBox>

         <!-- Image Display -->
         <ImageView fx:id="displayImage" fitHeight="150.0" fitWidth="400.0" preserveRatio="true" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 10; -fx-border-color: #cfd8dc; -fx-border-radius: 10; -fx-border-width: 1;" />
      </VBox>

      <!-- Submit Button -->
      <Button layoutX="350.0" layoutY="540.0" mnemonicParsing="false" onAction="#AjouterPartner" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 15 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 0);" text="Add Partner">
         <effect>
            <DropShadow color="rgba(0,0,0,0.3)" radius="10" />
         </effect>
      </Button>
      <Button layoutX="50.0" layoutY="540.0" mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 15 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 0);" text="Back">
         <effect>
            <DropShadow color="rgba(0,0,0,0.3)" radius="10" />
         </effect>
      </Button>
   </children>
</AnchorPane>
