<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.Partner.AjouterPartnershipController">
   <children>
      <!-- Header Section -->
      <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" prefWidth="800.0" spacing="10">
         <Label style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Add Partnership" textFill="#3f51b5">
            <effect>
               <DropShadow color="rgba(0, 0, 0, 0.2)" radius="10" />
            </effect>
         </Label>
      </VBox>

      <!-- Form Section -->
      <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" prefWidth="600.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-border-radius: 10; -fx-border-color: #e0e0e0; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 0);">
         <!-- Hidden fields for IDs -->
         <TextField fx:id="PartnerId" visible="false" managed="false" />
         <TextField fx:id="EventId" visible="false" managed="false" />

         <!-- Date Debut -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Start Date:" textFill="#3f51b5" />
            <DatePicker fx:id="DateDebut" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>

         <!-- Date Fin -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="End Date:" textFill="#3f51b5" />
            <DatePicker fx:id="DateFin" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>

         <!-- Terms -->
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Terms:" textFill="#3f51b5" />
            <TextField fx:id="Terms" prefWidth="400.0" promptText="Enter terms" style="-fx-background-color: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-border-radius: 10; -fx-border-color: #cfd8dc; -fx-padding: 5 10;" />
         </HBox>
      </VBox>

      <!-- Submit Button -->
      <Button layoutX="350.0" layoutY="540.0" mnemonicParsing="false" onAction="#AjouterPartnership" style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 15 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 0);" text="Add Partnership">
         <effect>
            <DropShadow color="rgba(0,0,0,0.3)" radius="10" />
         </effect>
      </Button>
   </children>
</AnchorPane>
