<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="915.0" prefWidth="1242.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.feedback.EventPlannerFeedbackController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Feedback &amp; Claims Management" />
        </HBox>

        <!-- Statistics Cards -->
        <HBox spacing="20">
            <!-- Feedback Statistics -->
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;" styleClass="stat-card">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #9C27B0;" text="Total Feedback" />
                <Label fx:id="totalFeedbackLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="0" />
                <Label fx:id="avgRatingLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Avg Rating: 0.0" />
            </VBox>

            <!-- Claims Statistics -->
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;" styleClass="stat-card">
                <Label style="-fx-font-size: 16px; -fx-text-fill: #E91E63;" text="Total Claims" />
                <Label fx:id="totalClaimsLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="0" />
                <HBox spacing="10">
                    <Label fx:id="pendingClaimsLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Pending: 0" />
                    <Label fx:id="resolvedClaimsLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Resolved: 0" />
                </HBox>
            </VBox>
        </HBox>

        <!-- Tabs for Feedback and Claims -->
        <TabPane style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <Tab closable="false" text="Feedback Management">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Search and Filter Section for Feedback -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <TextField fx:id="feedbackSearchField" prefWidth="300" promptText="Search feedback..." />
                            <Label text="Filter by Rating:" />
                            <ComboBox fx:id="feedbackRatingFilter" prefWidth="100" />
                            <Button fx:id="clearFeedbackFiltersButton" style="-fx-background-color: #808080; -fx-text-fill: white;" text="Clear Filters" />
                        </HBox>
                    </VBox>

                    <!-- Edit Section for Feedback -->
                    <VBox prefHeight="60.0" prefWidth="870.0" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Edit Feedback" />
                        <GridPane hgap="10" vgap="10">
                            <Label text="Comments:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextArea fx:id="feedbackCommentsEdit" prefRowCount="2" promptText="Enter comments" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Rating:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ComboBox fx:id="feedbackRatingEdit" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                <Button fx:id="saveFeedbackButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save Changes" />
                                <Button fx:id="cancelFeedbackButton" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel" />
                            </HBox>
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Feedback Table -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="All Feedback" />
                        <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="feedbackClientColumn" prefWidth="150" text="Client" />
                                <TableColumn fx:id="feedbackCommentsColumn" prefWidth="300" text="Comments" />
                                <TableColumn fx:id="feedbackRatingColumn" prefWidth="100" text="Rating" />
                                <TableColumn fx:id="feedbackActionsColumn" prefWidth="150" text="Actions" />
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <Tab closable="false" text="Claims Management">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Search and Filter Section for Claims -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <TextField fx:id="claimSearchField" prefWidth="300" promptText="Search claims..." />
                            <Label text="Filter by Type:" />
                            <ComboBox fx:id="claimTypeFilter" prefWidth="150" />
                            <Label text="Filter by Status:" />
                            <ComboBox fx:id="claimStatusFilter" prefWidth="150" />
                            <Label text="Filter by Event:" />
                            <ComboBox fx:id="claimEventFilter" prefWidth="200" />
                            <Button fx:id="clearClaimFiltersButton" style="-fx-background-color: #808080; -fx-text-fill: white;" text="Clear Filters" />
                        </HBox>
                    </VBox>

                    <!-- Edit Section for Claims -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Edit Claim" />
                        <GridPane hgap="10" vgap="10">
                            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <ComboBox fx:id="claimTypeEdit" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ComboBox fx:id="claimStatusEdit" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextArea fx:id="claimDescriptionEdit" prefRowCount="2" promptText="Enter description" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                <Button fx:id="saveClaimButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save Changes" />
                                <Button fx:id="cancelClaimButton" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel" />
                            </HBox>
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Claims Table -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="All Claims" />
                        <TableView fx:id="claimTable" prefHeight="271.0" prefWidth="1162.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="claimClientColumn" prefWidth="150" text="Client" />
                                <TableColumn fx:id="claimDateColumn" prefWidth="150" text="Date" />
                                <TableColumn fx:id="claimTypeColumn" prefWidth="100" text="Type" />
                                <TableColumn fx:id="claimDescriptionColumn" prefWidth="250" text="Description" />
                                <TableColumn fx:id="claimStatusColumn" prefWidth="100" text="Status" />
                                <TableColumn fx:id="claimActionsColumn" prefWidth="150" text="Actions" />
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</AnchorPane>
