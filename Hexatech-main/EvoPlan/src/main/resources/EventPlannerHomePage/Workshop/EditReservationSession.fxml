<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.EventPlannerHomePage.ReservationSession.EditReservationSessionController">
    <VBox spacing="10" style="-fx-padding: 20;" prefWidth="600" prefHeight="400">
        <!-- Name -->
        <Label text="Name:" />
        <TextField fx:id="nameField" />
        <Label fx:id="nameError" style="-fx-text-fill: red;" visible="false" />

        <!-- Email -->
        <Label text="Email:" />
        <TextField fx:id="emailField" />
        <Label fx:id="emailError" style="-fx-text-fill: red;" visible="false" />

        <!-- Buttons -->
        <HBox spacing="10">
            <Button fx:id="updateButton" text="Update" onAction="#handleUpdate" />
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>