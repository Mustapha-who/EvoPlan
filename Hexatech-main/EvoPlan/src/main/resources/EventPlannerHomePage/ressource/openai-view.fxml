<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.Ressource.OpenAIController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f0f0f5;">
    <!-- Titre -->
    <Label text="OpenAI Interface" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4166d5;" />

    <!-- Champ de saisie -->
    <TextField fx:id="promptField" promptText="Entrez votre prompt ici..." style="-fx-background-color: white; -fx-border-color: #4166d5; -fx-border-radius: 5px; -fx-padding: 5;" />

    <!-- Bouton pour envoyer le prompt -->
    <Button text="Envoyer" onAction="#onSendPrompt" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 10 20;" />

    <!-- Zone de rÃ©ponse -->
    <TextArea fx:id="responseArea" editable="false" wrapText="true" style="-fx-background-color: white; -fx-border-color: #4166d5; -fx-border-radius: 5px; -fx-padding: 5;" />
</VBox>