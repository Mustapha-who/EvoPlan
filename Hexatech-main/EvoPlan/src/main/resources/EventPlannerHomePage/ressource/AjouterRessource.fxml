<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f0f0f5; -fx-padding: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.Ressource.AjouterRessourceController">

    <VBox alignment="CENTER" prefHeight="824.0" prefWidth="1286.0" spacing="10" style="-fx-background-color: #f0f0f5; -fx-padding: 10;">

        <!-- Titre de l'application -->
        <Label style="
    -fx-text-fill: linear-gradient(to bottom, #4166d5, #2a4a8f); /* Dégradé de couleur */
    -fx-font-size: 28px; /* Taille de police légèrement augmentée */
    -fx-font-weight: bold; /* Texte en gras */
    -fx-font-family: 'Arial', sans-serif; /* Police moderne */
    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.5, 2, 2); /* Ombre plus prononcée */
    -fx-padding: 10px; /* Espacement interne */
    -fx-background-color: #f0f0f5; /* Fond légèrement coloré */
    -fx-background-radius: 10px; /* Coins arrondis */
    -fx-border-color: #4166d5; /* Bordure colorée */
    -fx-border-width: 2px; /* Épaisseur de la bordure */
    -fx-border-radius: 10px; /* Coins arrondis pour la bordure */
" text="Gestion Des Ressources" />
        <!-- Liste des ressources -->
        <ListView fx:id="ressourceListView" prefHeight="100.0" prefWidth="900.0" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 3, 0, 1);" />

        <!-- Formulaire de saisie -->
        <VBox alignment="CENTER" prefHeight="250.0" prefWidth="900.0" spacing="10" style="-fx-background-color: #ffffff; -fx-border-radius: 10px; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 5, 0, 2);">
            <GridPane hgap="10" style="-fx-padding: 5;" vgap="10">
                <!-- Nom -->
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nomField" prefWidth="200" promptText="Entrez le nom de la ressource" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Type -->
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Type :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="typeField" prefWidth="200" promptText="Sélectionnez un type" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Disponibilité -->
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Disponible :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <CheckBox fx:id="availabilityField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Contraintes de colonnes et de lignes -->
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <!-- Champ spécifique pour Equipment ou Venue -->
            <VBox fx:id="equipmentFields" spacing="5" visible="false">
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Type d'équipement :" />
                <TextField fx:id="equipmentTypeField" prefWidth="200" promptText="Entrez le type d'équipement" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" />
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Quantité :" />
                <TextField fx:id="quantityField" prefWidth="200" promptText="Entrez la quantité" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" />
            </VBox>

            <VBox fx:id="venueFields" spacing="5" visible="false">
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Adresse :" />
                <TextField fx:id="addressField" prefWidth="200" promptText="Entrez l'adresse" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" />
                <Label style="-fx-text-fill: #4166d5; -fx-font-weight: bold;" text="Capacité :" />
                <TextField fx:id="capacityField" prefWidth="200" promptText="Entrez la capacité" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" />
            </VBox>
        </VBox>

        <!-- Barre de recherche -->
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="900.0" spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="searchField" onKeyReleased="#handleRechercher" prefHeight="30.0" prefWidth="200.0" promptText="Rechercher par nom" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px; -fx-padding: 5;" />
            <Button onAction="#handleRechercher" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Rechercher" />
            <Button onAction="#afficherCarte" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Afficher carte" />
            <!-- WebView pour afficher la carte (initialement invisible) -->
            <WebView fx:id="webView" visible="false" />
            <Button fx:id="exportButton" alignment="CENTER" contentDisplay="CENTER" onAction="#onExportExcel" prefHeight="30.0" prefWidth="167.0" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Exporter Excel" textAlignment="CENTER" />
        </HBox>

        <!-- Section CAPTCHA -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <ImageView fx:id="captchaImageView" />
            <TextField fx:id="captchaTextField" prefWidth="150" promptText="Entrez le CAPTCHA" style="-fx-background-color: #ffffff; -fx-border-color: #4166d5; -fx-border-radius: 5px;" />
            <Button onAction="#validateCaptcha" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Valider CAPTCHA" />
        </HBox>

        <!-- Bilan -->
        <Label fx:id="bilanLabel" style="-fx-text-fill: #4166d5; -fx-font-size: 14px;" />

        <!-- Boutons d'actions -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleAjouter" prefWidth="100" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Ajouter" />
            <Button onAction="#handleSupprimer" prefWidth="100" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Supprimer" />
            <Button onAction="#handleModifier" prefWidth="100" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Modifier" />
            <Button onAction="#openOpenAIView" prefWidth="120" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5 10;" text="Ouvrir OpenAI" />
        </HBox>

        <!-- Footer -->
        <Label prefHeight="17.0" prefWidth="152.0" style="-fx-text-fill: #4166d5; -fx-font-size: 12px; -fx-padding: 10;" text="Powered by HexaTech" />
    </VBox>
</AnchorPane>
