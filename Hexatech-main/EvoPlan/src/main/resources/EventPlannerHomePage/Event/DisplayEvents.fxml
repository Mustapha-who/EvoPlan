<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="789.0" prefWidth="1139.0" style="-fx-background-color: #f5f6fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.DisplayEventsController">

    <children>
      <HBox layoutX="2.0" layoutY="153.0" prefHeight="86.0" prefWidth="1266.0" spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
         <padding>
            <Insets left="40" right="40" />
         </padding>
      </HBox>

        <!-- Barre de recherche -->
        <HBox layoutX="186.0" layoutY="180.0" spacing="15" translateX="50.0">
            <children>
                <TextField fx:id="searchNameField" prefHeight="38.0" prefWidth="200" promptText="Rechercher par nom..." />
                <DatePicker fx:id="searchDateField" prefHeight="36.0" prefWidth="180" promptText="Sélectionner une date" />
                <ComboBox fx:id="searchLieuField" prefHeight="34.0" prefWidth="150">
                </ComboBox>
                <Button fx:id="searchButton" onAction="#handleSearch" prefHeight="34.0" prefWidth="124.0" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" text="Rechercher" />
            </children>
        </HBox>

        <!-- TableView pour afficher les événements -->
        <TableView fx:id="eventTable" layoutX="161.0" layoutY="249.0" prefHeight="494.0" prefWidth="858.0" style="-fx-background-radius: 8; -fx-padding: 10;">
            <effect>
                <DropShadow color="#00000022" radius="10.0" spread="0.1" />
            </effect>
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                <TableColumn fx:id="imageColumn" prefWidth="176.800048828125" text="IMAGE" />
                <TableColumn fx:id="nomColumn" prefWidth="148.800048828125" text="NOM" />
                <TableColumn fx:id="lieuColumn" prefWidth="124.00006103515625" text="LIEU" />
                <TableColumn fx:id="dateDebutColumn" prefWidth="133.60003662109375" text="DATE DÉBUT" />
                <TableColumn fx:id="dateFinColumn" prefWidth="116.79998779296875" text="DATE FIN" />
                <TableColumn fx:id="prixColumn" prefWidth="82.39999999999998" text="PRIX" />
            </columns>
        </TableView>

        <!-- Boutons d'action -->
        <HBox alignment="CENTER" layoutX="458.0" layoutY="750.0" spacing="20" style="-fx-padding: 10;">
            <Button fx:id="supprimerButton" style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-weight: bold;" text="SUPPRIMER" />
            <Button fx:id="modifierButton" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-weight: bold;" text="MODIFIER" />
        </HBox>

        <!-- En-tête de la page -->
        <StackPane prefHeight="124.0" prefWidth="1268.0" style="-fx-background-color: linear-gradient(to right, #3f51b5, #5c6bc0);">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <VBox spacing="5">
                            <children>
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-text-fill: white;" text="List of Events">
                                    <effect>
                                        <DropShadow color="rgba(0,0,0,0.3)" radius="5" />
                                    </effect>
                                </Label>
                                <Text fill="white" style="-fx-font-size: 14px; -fx-opacity: 0.9;" text="Manage your events" />
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleShowStats" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white;                                        -fx-font-size: 14px; -fx-background-radius: 20;                                        -fx-padding: 12 25;" text="View Statistics" />
                        <Button mnemonicParsing="false" onAction="#CreerButton1" prefHeight="44.0" prefWidth="169.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;                                        -fx-background-radius: 20; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" text="+ Add Event" />
                    </children>
                </HBox>
            </children>
        </StackPane>

    </children>
</AnchorPane>
