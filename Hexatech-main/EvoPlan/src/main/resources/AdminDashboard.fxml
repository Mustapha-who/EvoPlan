<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="672.0" prefWidth="1040.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="evoplan.controllers.AdminDashboardController">
    <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Statistics Cards -->
        <HBox spacing="20">
            <!-- Events Statistics -->
            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Total Events" style="-fx-font-size: 16px; -fx-text-fill: #4166d5;"/>
                <Label fx:id="totalEventsLabel" text="25" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Upcoming Events" style="-fx-font-size: 16px; -fx-text-fill: #4CAF50;"/>
                <Label fx:id="upcomingEventsLabel" text="5" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Completed Events" style="-fx-font-size: 16px; -fx-text-fill: #FF9800;"/>
                <Label fx:id="completedEventsLabel" text="20" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Feedback Statistics -->
            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Total Feedback" style="-fx-font-size: 16px; -fx-text-fill: #9C27B0;"/>
                <Label fx:id="totalFeedbackLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Claims Statistics -->
            <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <Label text="Total Claims" style="-fx-font-size: 16px; -fx-text-fill: #E91E63;"/>
                <Label fx:id="totalClaimsLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Event Statistics Chart -->
        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
            <Label text="Event Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region fx:id="chartRegion" VBox.vgrow="ALWAYS" minHeight="200"/>
        </VBox>

        <!-- Recent Events Table -->
        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <Label text="Recent Events" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="recentEventsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="eventNameColumn" text="Event Name" prefWidth="200"/>
                    <TableColumn fx:id="eventDateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="eventStatusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="eventParticipantsColumn" text="Participants" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>