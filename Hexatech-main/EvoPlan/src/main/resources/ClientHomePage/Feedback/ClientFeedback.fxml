<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="672.0" prefWidth="1040.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.feedback.ClientFeedbackController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="My Feedback &amp; Claims" />
        </HBox>

        <!-- Tabs for Feedback and Claims -->
        <TabPane style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <Tab closable="false" text="Feedback">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Add Feedback Section -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add New Feedback" />
                        <TextArea fx:id="feedbackComments" prefRowCount="3" promptText="Share your experience..." />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Rating:" />
                            <Button fx:id="ratingButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Rate Your Experience" />
                            <Label fx:id="ratingLabel" style="-fx-font-style: italic;" text="No rating yet" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="submitFeedbackButton" style="-fx-background-color: #4166d5; -fx-text-fill: white;" text="Submit Feedback" />
                        </HBox>
                    </VBox>

                    <!-- Search and Filter Section for Feedback -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <TextField fx:id="feedbackSearchField" prefWidth="300" promptText="Search feedback..." />
                            <Label text="Filter by Rating:" />
                            <ComboBox fx:id="feedbackRatingFilter" prefWidth="100" />
                            <Button fx:id="clearFeedbackFiltersButton" style="-fx-background-color: #808080; -fx-text-fill: white;" text="Clear Filters" />
                        </HBox>
                    </VBox>

                    <!-- Feedback History -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="My Feedback History" />
                        <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="feedbackCommentsColumn" prefWidth="400" text="Comments" />
                                <TableColumn fx:id="feedbackRatingColumn" prefWidth="100" text="Rating" />
                                <TableColumn fx:id="feedbackActionsColumn" prefWidth="150" text="Actions">
                                    <cellFactory>
                                        <javafx.scene.control.cell.PropertyValueFactory />
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <Tab closable="false" text="Claims">
                <VBox spacing="20" style="-fx-padding: 20;">
                    <!-- Add Claim Section -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Submit New Claim" />
                        <ComboBox fx:id="claimTypeComboBox" prefWidth="200" promptText="Select Claim Type" />
                        <TextArea fx:id="claimDescription" prefRowCount="3" promptText="Describe your claim..." />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="submitClaimButton" style="-fx-background-color: #4166d5; -fx-text-fill: white;" text="Submit Claim" />
                        </HBox>
                    </VBox>

                    <!-- Search and Filter Section for Claims -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <TextField fx:id="claimSearchField" prefWidth="300" promptText="Search claims..." />
                            <Label text="Filter by Type:" />
                            <ComboBox fx:id="claimTypeFilter" prefWidth="150" />
                            <Label text="Filter by Status:" />
                            <ComboBox fx:id="claimStatusFilter" prefWidth="150" />
                            <Button fx:id="clearClaimFiltersButton" style="-fx-background-color: #808080; -fx-text-fill: white;" text="Clear Filters" />
                        </HBox>
                    </VBox>

                    <!-- Claims History -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="My Claims History" />
                        <TableView fx:id="claimTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="claimDateColumn" prefWidth="150" text="Date" />
                                <TableColumn fx:id="claimTypeColumn" prefWidth="150" text="Type" />
                                <TableColumn fx:id="claimDescriptionColumn" prefWidth="250" text="Description" />
                                <TableColumn fx:id="claimStatusColumn" prefWidth="100" text="Status" />
                                <TableColumn fx:id="claimActionsColumn" prefWidth="150" text="Actions">
                                    <cellFactory>
                                        <javafx.scene.control.cell.PropertyValueFactory />
                                    </cellFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</AnchorPane>
