         <VBox alignment="BOTTOM_CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="TICKET FOR" wrappingWidth="82.93664360046387">
                     <font>
                        <Font size="14.0" />
                     </font>
