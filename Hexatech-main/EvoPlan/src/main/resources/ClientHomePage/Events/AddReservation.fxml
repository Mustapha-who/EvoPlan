               <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="TOTAL AMOUNT" HBox.hgrow="ALWAYS" />
               <Text fx:id="PRICEiD" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #4166d5;" textAlignment="RIGHT" translateX="15.0" />
