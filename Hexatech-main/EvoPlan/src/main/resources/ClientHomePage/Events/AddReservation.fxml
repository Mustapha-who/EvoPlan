      <Button onAction="#ConfirmerC" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4166d5; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 25;">
         <graphic>
            <HBox alignment="CENTER" spacing="10.0">
               <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="REGISTER NOW" />
            </HBox>
         </graphic>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>

      <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
         <Separator style="-fx-background-color: #e0e0e0;" />
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px; -fx-fill: #888888;" text="powered by" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #4166d5;" text="evoplan" />
         </HBox>
      </VBox>
   </VBox>

   <!-- Right Panel - Order Summary -->
   <AnchorPane layoutX="550.0" layoutY="0.0" prefHeight="600.0" prefWidth="350.0" style="-fx-background-color: #f5f7ff;">
      <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="350.0" spacing="20.0" style="-fx-padding: 30;">
         <!-- Event Image -->
         <ImageView fx:id="eventImage" fitHeight="200.0" fitWidth="300.0" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" />

         <!-- Order Summary Header -->
         <HBox alignment="CENTER">
            <Rectangle fill="#4166d5" height="2.0" width="50.0" />
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4166d5; -fx-padding: 10 20 10 20;" text="ORDER SUMMARY" />
            <Rectangle fill="#4166d5" height="2.0" width="50.0" />
         </HBox>

         <!-- Date Section -->
         <VBox prefHeight="75.0" prefWidth="289.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #666666;" text="Event Date:" />
            <Text fx:id="dateId" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-fill: #4166d5;" />
