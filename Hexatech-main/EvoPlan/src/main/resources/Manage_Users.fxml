<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="789.0" prefWidth="1139.0" style="-fx-background-color: #f5f6fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="evoplan.controllers.userModule.ManageUsersController">
    <children>
        <!-- Header Section with Gradient -->
        <StackPane prefHeight="124.0" prefWidth="954.0" style="-fx-background-color: linear-gradient(to right, #3f51b5, #5c6bc0);">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <VBox spacing="5">
                            <children>
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-text-fill: white;" text="Manage Users">
                                    <effect>
                                        <DropShadow color="rgba(0,0,0,0.3)" radius="5" />
                                    </effect>
                                </Label>
                                <Text fill="white" style="-fx-font-size: 14px; -fx-opacity: 0.9;" text="Manage your users" />
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#openAddUserForm" prefHeight="44.0" prefWidth="169.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);" text="Add User" />
                    </children>
                </HBox>
            </children>
        </StackPane>

        <!-- Search and Filter Section (Temporary) -->
        <HBox layoutX="57.0" layoutY="180.0" spacing="15" translateX="50.0" />

        <!-- User Table -->
        <TableView fx:id="userTable" layoutX="57.0" layoutY="190.0" prefHeight="362.0" prefWidth="900.0" style="-fx-background-radius: 8; -fx-padding: 10;">
            <effect>
                <DropShadow color="#00000022" radius="10.0" spread="0.1" />
            </effect>
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="emailColumn" text="Email" />
                <TableColumn fx:id="roleColumn" text="Role" />
                <TableColumn fx:id="phoneNumberColumn" text="Phone Number" />
                <TableColumn fx:id="moduleColumn" text="Module" />
                <TableColumn fx:id="specializationColumn" text="Specialization" />
                <TableColumn fx:id="certificationColumn" text="Certification" />
                <TableColumn fx:id="actionColumn" text="Actions" />
            </columns>
        </TableView>

        <!-- Pagination control -->
        <Pagination fx:id="pagination" currentPageIndex="0" layoutX="57.0" layoutY="577.0" pageCount="0" />
          <TextField fx:id="searchField" layoutX="113.0" layoutY="137.0" prefHeight="38.0" prefWidth="200" promptText="Search..." />
          <ComboBox fx:id="filterComboBox" layoutX="323.0" layoutY="137.0" prefHeight="34.0" prefWidth="150" promptText="Filter by">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Username" />
                      <String fx:value="Email" />
                      <String fx:value="Role" />
                      <String fx:value="Phone Number" />
                  </FXCollections>
              </items>
          </ComboBox>
          <Button fx:id="clearButton" layoutX="507.0" layoutY="137.0" prefHeight="34.0" prefWidth="100.0" style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" text="Clear" onAction="#clearSearchField"/>
    </children>
</AnchorPane>
